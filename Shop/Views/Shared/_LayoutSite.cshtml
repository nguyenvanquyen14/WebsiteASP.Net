
<!DOCTYPE HTML>
<html>
<head>
    <title> @ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Public/css/bootstrap.css" rel="stylesheet" />

    <link href="~/Public/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Public/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Public/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <!--font aw-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link href="~/Public/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!---->
    <script src="~/Public/js/jquery-3.6.0.min.js"></script>
    <script src="~/Public/js/jquery-1.7.2.min.js"></script>
    <script src="~/Public/js/bootstrap.min.js"></script>
    <script src="~/Public/js/move-top.js"></script>
    <script src="~/Public/js/easing.js"></script>
    <script src="~/Public/js/startstop-slider.js"></script>

    <script src="~/Public/js/jquery.easing.js"></script>
    <script src="~/Public/js/easyResponsiveTabs.js"></script>
    <link href="~/Public/css/easy-responsive-tabs.css" rel="stylesheet" />
    <link href="~/Public/css/global.css" rel="stylesheet" />
    <script src="~/Public/js/slides.min.jquery.js"></script>
    <script>
        $(function () {
            $('#products').slides({
                preload: true,
                preloadImage: 'img/loading.gif',
                effect: 'slide, fade',
                crossfade: true,
                slideSpeed: 350,
                fadeSpeed: 500,
                generateNextPrev: true,
                generatePagination: false
            });
        });
    </script>
    @RenderSection("header", required: false)
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                <div class="call">
                    <p> <span> Chào Mừng Đến Với Chúng Tôi </span></p>
                </div>
                <div class="account_desc">
                    <ul>
                        @if (Session["UserCustomer"].Equals(""))
                        {
                            <li><a href="~/dang-ky"> <i class="fas fa-user"></i> Đăng ký </a></li>
                            <li><a href="~/dang-nhap"> <i class="fas fa-user"></i> Đăng Nhập </a></li>
                        }
                        else
                        {
                            <li><a href="~/KhachHang/DangXuat"> <i class="fas fa-user"></i> Đăng Xuất </a></li>
                        }
                    </ul>
                </div>
                <div class="clear"></div>
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="index.html">
                        <img src="~/Public/images/products/logo.png" alt="" />
                    </a>
                </div>
                <div class="cart ">
                    @{
                        int soluong = 0;
                        if (!System.Web.HttpContext.Current.Session["MyCart"].Equals(""))
                        {
                            List<CartItem> listcart = (List<CartItem>)System.Web.HttpContext.Current.Session["MyCart"];
                            soluong = listcart.Count();
                        }
                    }
                    <a href="~/gio-hang" class="btn btn-success position-relative">
                        <i class="fas fa-shopping-bag"> </i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @soluong
                            <span class="visually-hidden"></span>
                        </span>
                    </a>
                </div>
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });

                </script>
                <div class="clear"></div>
            </div>
            @Html.Action("MainMenu", "Module")
        </div>
        @RenderBody()
    </div>
   

    <div class="footer">
        <div class="wrap">
            <div class="section group">
                <div class="col_1_of_4 span_1_of_4">
                    @Html.Action("MenuFooter", "Module")
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Hỗ trợ mua hàng</h4>
                    <ul>
                        <li><a href="about.html">Hỗ trợ mua hàng trực tuyến</a></li>
                        <li><a href="contact.html">Các hình thức thanh toán</a></li>
                        <li><a href="#">Hướng dẫn mua hàng trực tuyến </a></li>
                        <li><a href="contact.html">Phát hành hóa đơn</a></li>                      
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4> Chính sách chung</h4>
                    <ul>
                        <li><a href="~/gioi-thieu">Giới thiệu</a></li>
                        <li><a href="~/tin-tuc">Tin tức</a></li>
                        <li><a href="~/chinh-sach-van-chuyen">Chính sách vận chuyển</a></li>
                        <li><a href="~/chinh-sach-mua-hang">Chính sách mua hàng</a></li>                       
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Liên Hệ </h4>
                    <ul>
                        <li><span>0377615673</span></li>
                        <li><span>0399512345</span></li>
                    </ul>
                    <div class="social-icons">
                        <h4>FanPage</h4>
                        <ul>
                            <li><a href="#" target="_blank"><img src="~/Public/images/products/facebook.png" alt="" /></a></li>
                            <li><a href="#" target="_blank"><img src="~/Public/images/products/twitter.png" alt="" /></a></li>
                            <li><a href="#" target="_blank"><img src="~/Public/images/products/skype.png" alt="" /> </a></li>
                            <li><a href="#" target="_blank"> <img src="~/Public/images/products/dribbble.png" alt="" /></a></li>
                            <li><a href="#" target="_blank"> <img src="~/Public/images/products/linkedin.png" alt="" /></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @RenderSection("footer", required: false)
</body>
</html>


