@model MyClass.Models.Slider

@{
    ViewBag.Title = "Chi tiết ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong> CHI TIẾT </strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Edit","Slider", new { id = Model.Id })" class=" btn btn-sm btn-success"><i class="fas fa-edit"></i> Cập nhật </a>
                        <a href="@Url.Action("Index","Slider")" class=" btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left"></i> Trả về danh sách </a>
                    </div>
                </div>
            </div>
            <div class="card-body ">
                <table class="table table-bordered">
                    <tr>
                        <th style="width:120px"> Tên trường </th>

                        <th> Nội dung </th>
                    </tr>
                    <tr>
                        <td> Tên Slider </td>
                        <td> @Html.DisplayFor(model => model.Name) </td>
                    </tr>
                    <tr>
                        <td> Liên kết </td>
                        <td> @Html.DisplayFor(model => model.Link) </td>
                    </tr>
                    <tr>
                        <td> Vị trí </td>
                        <td> @Html.DisplayFor(model => model.Position) </td>
                    </tr>
                    <tr>
                        <td> Hình ảnh </td>
                        <td> @Html.DisplayFor(model => model.Img) </td>
                    </tr>
                    <tr>
                        <td>  Vị trí </td>
                        <td> @Html.DisplayFor(model => model.Orders) </td>
                    </tr>
                    <tr>
                        <td> Ngày tạo </td>
                        <td> @Html.DisplayFor(model => model.Created_At) </td>
                    </tr>
                    <tr>
                        <td> Người tạo </td>
                        <td>  @Html.DisplayFor(model => model.Created_By) </td>
                    </tr>
                    <tr>
                        <td> Người cập nhật </td>
                        <td> @Html.DisplayFor(model => model.Updated_By) </td>
                    </tr>
                    <tr>
                        <td>  Lúc cập nhật </td>
                        <td> @Html.DisplayFor(model => model.Updated_At) </td>
                    </tr>
                    <tr>
                        <td> Trạng thái </td>
                        <td> @Html.DisplayFor(model => model.Status) </td>
                    </tr>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
