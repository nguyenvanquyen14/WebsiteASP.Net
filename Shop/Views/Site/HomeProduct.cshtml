@model IEnumerable<MyClass.Models.ProductInfo>
@{
    var category = ViewBag.Category;
}
@if (Model.Count() != 0)
{
    <div class="main">
        <div class="content">
            <div class="content_top">
                <div class="heading">
                    <h3 class=" text-uppercase">@category.Name</h3>
                </div>
                <div class="see">
                    <p><a href="~/@category.Slug">Xem tất cả</a></p>
                </div>
                <div class="clear"></div>
            </div>
            <div class="section group  ">
                @foreach (var product in Model)
                {
                    <div class="grid_1_of_4 images_1_of_4 float-rt ">
                        <a href="~/@product.Slug"><img src="~/Public/images/products/@product.Img" alt="" /></a>
                        <a href="~/@product.Slug">@product.Name </a>
                        <div class="price-details">
                            <div class="text-center">
                                <strong class="text-success">@string.Format("{0:0,0}", product.PriceSale) <sup>đ</sup></strong>
                                <del> <span class="text-danger">@string.Format("{0:0,0}", product.Price)</span></del><sup>đ</sup>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="add-cart">
                            <h4><a href="@Url.Action("CartAdd","Giohang", new {productid = product.Id })">Thêm vào giỏ hàng </a></h4>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
}
