@model MyClass.Models.Post
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
<div class="wrap">
    <div class="main">
        <div class="content">
            <div class="col_1_of_3 span_1_of_3">
                <h3>@Model.Title</h3>
            </div>
            <div class="container">
                <div class="image group">                  
                    <p>@Model.Detail</p>
                </div>
            </div>
        </div>
    </div>
</div>


